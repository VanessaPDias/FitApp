{
    "openapi": "3.0.0",
    "info": {
        "title": "FitApp",
        "description": "Serviço que visa ajudar todas as pessoas que querem adotar um estilo de vida mais saudável com a união de bons hábitos alimenta-res e à prática de exercícios físicos.",
        "contact": {
            "name": "Vanessa Dias",
            "url": "https://github.com/VanessaPDias",
            "email": "vanessapdias@outlook.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
            
        }
    ],
    "paths": {
        "/usuarios": {
            "post": {
                "summary": "Cadastro de usuário",
                "description": "Essa rota será responsável por cadastrar um novo usuário",
                "tags": [
                    "Usuarios"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "user": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "password": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "João Cardoso",
                                        "email": "jcardoso@email.com",
                                        "senha": "123Jc56"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Erros de validação de regras de negocio"
                    },
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        }

    }    
}